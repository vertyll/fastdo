{
  "typescript": {
    "indentWidth": 2,
    "lineWidth": 120,
    "semiColons": "always",
    "quoteStyle": "preferSingle",
    "arrowFunction.useParentheses": "preferNone",
    "importDeclaration.sortNamedImports": "caseSensitive"
  },
  "json": {
    "indentWidth": 2,
    "lineWidth": 120
  },
  "markdown": {
    "lineWidth": 120,
    "textWrap": "always"
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md,html,css,scss}"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "dist",
    "coverage",
    "src/metadata.ts",
    "src/generated"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.91.6.wasm",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.2.wasm"
  ]
}
