{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "format", "lint", "test"],
      "outputs": ["build/**", "dist/**"],
      "cache": true,
      "persistent": false
    },
    "setenv:dev": {
      "dependsOn": ["^setenv:dev"],
      "cache": false,
      "persistent": false
    },
    "setenv:docker:dev": {
      "dependsOn": ["^setenv:docker:dev"],
      "cache": false,
      "persistent": false
    },
    "turbo:dev": {
      "dependsOn": ["setenv:dev"],
      "cache": false,
      "persistent": true
    },
    "docker:dev": {
      "dependsOn": ["setenv:docker:dev"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true,
      "persistent": false
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": true,
      "persistent": false
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true,
      "persistent": false
    },
    "test:watch": {
      "dependsOn": ["^test:watch"],
      "cache": false,
      "persistent": true
    }
  }
}
