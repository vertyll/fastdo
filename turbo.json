{
  "$schema": "https://v2-8-3.turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "format", "lint", "test"],
      "outputs": ["build/**", "dist/**"],
      "cache": true,
      "persistent": false
    },
    "setenv:dev": {
      "dependsOn": ["^setenv:dev"],
      "cache": false,
      "persistent": false
    },
    "dev": {
      "dependsOn": ["setenv:dev"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true,
      "persistent": false
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": true,
      "persistent": false
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true,
      "persistent": false
    },
    "test:watch": {
      "dependsOn": ["^test:watch"],
      "cache": false,
      "persistent": true
    },
    "seed": {
      "dependsOn": ["^seed"],
      "cache": false,
      "persistent": false
    },
    "seed:reset": {
      "dependsOn": ["^seed:reset"],
      "cache": false,
      "persistent": false
    },
    "seed:list": {
      "dependsOn": ["^seed:list"],
      "cache": false,
      "persistent": false
    }
  }
}
